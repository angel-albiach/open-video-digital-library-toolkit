- collection = show
.collection.page.show
  .collection
    .image
      - if p = collection.poster_path
        %img{:src=>collection.poster_path,:alt => "sample image from collection"}
    .details
      .title
        - if current_user and current_user.id == collection.user_id
          .right
            = link_to "edit", edit_collection_path( collection )
          .clear
          .right
            = link_to "delete", collection_path( collection ), |
                 :method => :delete, |
                 :confirm => "are you sure you want to delete this collection?" |
        - else
          .created_by.right
            Created by
            .value= h collection.user.login
        = h collection.title
      .attribute.created_on
        .separator &bull;
        .legend Created on:
        .value= collection.created_at.to_date.to_s(:medium)
      .attribute.updated_on
        .separator &bull;
        .legend Last updated:
        .value= collection.created_at.to_date.to_s(:medium)
      .attribute.videos
        .separator &bull;
        .legend Videos:
        .value= collection.size
      .attribute.views
        .separator &bull;
        .legend Views:
        .value= collection.views
      .clear
      .description= h collection.description
      - if current_user and current_user.id == collection.user_id
        .clear
        .public
          This playlist is 
          = collection.public? ? "public." : "private."

  .clear
  = render :partial => "videos/index", :object => videos
