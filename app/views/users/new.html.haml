.one-column
  /head start
  .head
    %span.left
      Register
  /head end
  .body
    - @user.password = @user.password_confirmation = nil
    = error_messages_for :user
    - form_for :user, :url => users_path, :html => {:class => 'loginform'} do |f|
      %label
        Login Name
      = f.text_field :login
      %label{ :for => "user_email" }
        E-mail Address
      = f.text_field :email
      %label{ :for => "user_password" }
        Password
      = f.password_field :password
      %label{ :for => "user_password_confirmation" }
        Confirm Password
      = f.password_field :password_confirmation
      %br
      %br
      = image_submit_tag "btn-register.gif", :name => "Register"


