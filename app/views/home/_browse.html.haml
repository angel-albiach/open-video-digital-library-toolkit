.category
  .title.block Browse Videos
  .content.block.last
    = render :partial => "axes"
    .videos
      - DescriptorType.each do |type|
        .axis
          - i = 0
          - type.descriptors_sorted.each do |descriptor|
            - v = descriptor.most_recent
            - if v
              .video
                .image= link_to "image", video_path( v.id )
                .text
                  .title= link_to h(v.title), video_path( v.id )
                  = link_to "more in<br />#{h descriptor.text}", "#"
              - i += 1
              - break if i > 4
    .clear
