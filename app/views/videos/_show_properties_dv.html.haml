- dts = descriptor_types
- dvs = dts.map { |dt| properties_by_type( dt ) }
- if dvs.flatten.size > 0
  %dt
    Descriptors
  %dd
    - dts.each_with_index do |dt,i|
      %ul
        - if dvs[i].length > 0
          %li
            %label
              = link_to "#{h(dt.name)}:", property_type_videos_path( dt )
            = dvs[i].map(&:value).map { |dv| link_to h(dv.text), |
                                           descriptor_value_search( dv) }.join(", ") |
