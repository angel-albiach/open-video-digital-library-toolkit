.one-column
  /head start
  .head
    %span.left
      Reset Password
  /head end
  .body
    - if flash[:notice] or flash[:error]
      %br
      .flash
        %div= flash[:notice]
        %div= flash[:error]
      %br
    - if @user
      - form_tag reset_password_path( @user.password_reset_code ), :method => :post do
        %div
          %div
            %label{:for=>:password}
              New Password
            %div= password_field_tag 'password', nil, :class => "text input"

          %br
          %div
            %label{:for=>:password_confirmation}Confirm Password
            %div= password_field_tag 'password_confirmation', nil, :class => "text input"

        %br
        = image_submit_tag "btn-save-new-password.gif", :name => "Reset Password", :class => "submit"
