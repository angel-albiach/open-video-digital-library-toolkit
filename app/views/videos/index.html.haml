.list

  %h1 Search / Browse Results

  .form
    - form_tag search_videos_path do
      = text_field_tag :query, params[:query], :size => 60
      = submit_tag "Search"

  .pagination_info
    = page_entries_info @videos

  .navigate

    .view.current List View
    .view Tile View
    .view Image View  
    .clear

  .videos
    - @videos.each do |video|
      .video
        .image
        .title=h video.title
        - if !video.year.blank?
          .year= "(#{h video.year})"
        .sentence=h video.sentence
        .menu
          = link_to "View video details", video_path( video )
          &nbsp;&bull;&nbsp;
          = link_to "Add to favorites", user_favorites_path( video )
          &nbsp;&bull;&nbsp;
          = link_to "Download", download_video_path( video )

  .pagination
    = will_paginate @videos

.sidebar
  .entry
    - if @type
      = render :partial => "shared/axis", :object => @type
  .entry
    .title Refine Results
    %ul
      %li Genre: select one
  .entry
    .title Tools and Services
    %ul
      %li Save this search

.clear