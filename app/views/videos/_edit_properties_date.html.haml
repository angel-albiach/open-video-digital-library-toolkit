- pc = PropertyClass.find_by_name property_class
.head
  Dates
.form.add
  %ul
    - if ( ps = properties_by_class( pc ) ).size == 0
      %li.delete.none
        .property-type.display-edit
          .display
            No properties
    - else
      - ps.each do |p|
        = render :partial => "p_date", :object => p, |
                                  :locals => { :property_class => pc } |
    %li
      .property-type.new
        .button-set
          .btn-add
            %a{ :href => "#" }
              = image_tag "/images/icon-add.png"
              Add Date Type
          .clear
            %ul.template
              = render :partial => "p_date", :object => p_template, |
                                  :locals => { :property_class => pc } |
