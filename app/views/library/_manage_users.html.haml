.head
  Manage Users
.form.admin-form.create.users
  %ul
    %li
      - form_tag :action => :remove_users do
        %label
          Remove Users
          = text_field_tag :users, nil, :id => nil, :class => "input", :placeholder => "Enter a login name to remove that user; separate multiple login names with spaces"
        = submit_tag "Remove"

    - Role.find(:all).each do |role|
      - role = role.name

      %li
        - form_tag :action => :add_role do
          %label
            Users to add to role
            &= role.humanize
            = text_field_tag :users, nil, :id => nil, :class => "input", :placeholder => "Enter a login name to add role for that user; separate multiple login names with spaces"
            = hidden_field_tag :role, role, :id => nil
          = submit_tag "Add"

        - form_tag :action => :remove_role do
          %label
            Users to remove from role
            &= role.humanize
            = text_field_tag :users, nil, :id => nil, :class => "input", :placeholder => "Enter a login name to remove role for that user; separate multiple login names with spaces"
            = hidden_field_tag :role, role, :id => nil
          = submit_tag "Remove"
