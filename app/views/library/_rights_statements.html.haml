.head
  Rights Statements
- form_for :library, @library, :html => { :method => :put, |
                                          :class => "admin-form create"  } |
                                            do |@form| |
  - rights_details.each do |rd|
    %ul
      = render :partial => "library/rd", :object => rd
  %ul
    %li
      .property-type.new
        = link_to "new", "#"
        %ul.template
          = render :partial => "library/rd", :object => rd_template
  .left
    %input.submit{ :name => "submit", :value => "save", :src => "/images/btn-save-changes.gif", :type => "image", :id => nil }
    %span.btn-cancel
      = link_to "cancel", library_path
    .clear
    %input.submit{ :name => "submit", :value => "finished", :src => "/images/btn-finish.gif", :type => "image", :id => nil }
