.collections.index
  = render :partial => "collections/index", :object => @collections, |
           :locals => { :title => @title, |
                        :subtitle => @subtitle } |
  - if current_user and current_user.has_role?( "admin" )  
    :javascript
      $(document).ready( function() {
        make_sortable( { list_selector : "#all_collections", item_selector : ".collection" , post_url : "/collections/featured/order"}  );
      });
