.my
  .account
    = h(current_user.login)
    Account Information
  .registered
    Registered since:
    = current_user.created_at.to_date.to_s(:long)
  .password
    %fieldset
      %legend
        Change Password
      - form_tag  url_for( :action => :password ), :method => :put do
        .current
          %label
            %span.legend Current Password:
            = password_field_tag :old_password
        .new
          %label
            %span.legend New Password:
            = password_field_tag :new_password
        .verify
          %label
            %span.legend Verify New Password:
            = password_field_tag :confirm_password
        .submit
          = submit_tag "change password"
