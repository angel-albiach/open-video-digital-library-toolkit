- form_for @video do |@f|

  %fieldset

    / = debug(@video)

    %legend
      = @video.new_record? ? "New" : "Edit"
      Video
    - if !error_messages_for( :video ).blank?
      .flash.error
        = error_messages_for :video
    .tabs
      %ul
        - tabs.each do |tab|
          = tab_for tab
      - tabs.each do |tab|
        = div_for tab

