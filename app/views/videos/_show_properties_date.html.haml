- pc = PropertyClass.find_by_name property_class
%div
  .form
    %ul
      - if ( ps = properties_by_class( pc.id ) ).size == 0
        %li.delete.none
          .property-type.display-edit
            .display
              No properites
      - else
        - ps.each do |p|
          = render :partial => "p_date", :object => p
      - if editing?
        %li
          .property-type.new
            = link_to "new", "#"
            %ul.template
              = render :partial => "p_date", :object => p_template
