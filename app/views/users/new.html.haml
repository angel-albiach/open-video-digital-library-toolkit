.one-column
  /head start
  .head
    %span.left
      Register
  /head end
  .body
    - @user.password = @user.password_confirmation = nil
    = error_messages_for :user
    - form_for :user, :url => users_path, :html => {:class => 'loginform'} do |f|
      %label
        Login Name
      = f.text_field :login
      %label{ :for => "email" }
        E-mail Address
      = f.text_field :email
      %label{ :for => "password" }
        Password
      = f.password_field :password
      %label{ :for => "password_confirmation" }
        Confirm Password
      = f.password_field :password_confirmation
      %br
      %input.btn-login{ :name => "", :src => "images/btn-login.gif", :type => "image" }


