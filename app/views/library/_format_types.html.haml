- pc = PropertyClass.find_by_name "Format Types"
%div
  .form
    %ul
      - pc.property_types.each do |pt|
        %li{:id=>pt.tableize,:class=>:delete}
          .property-type.display-edit
            .display
              = pt.name
              %span.edit= link_to "edit", ""
            .edit
              %label
                Name:
                = text_field_tag "property_type[#{pt.id}][name]", pt.name, :id => nil
              %span.delete
                = link_to "delete", ""
                = hidden_field_tag "property_type[#{pt.id}][deleted]", false, :id => nil
                -
                = hidden_field_tag "property_type[#{type_id(pt)}][property_class_id]", |
                                   pc.id, :id => nil |
    add
